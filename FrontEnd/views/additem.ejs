</head>

<body>
    <div class="add-item">
        <h1>Add Item</h1>
        <form action="/save_additem" method="post" id="addForm" enctype="multipart/form-data">


                <label for="img">img</label>
            <p></p>
            <div id="imageList"></div> <!-- ใช้แสดงรูปภาพ -->
            <input type="file" id="img" name="img">
            <p></p>
            <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label">name</label>
                <input name="name" type="text" class="form-control" id="formGroupExampleInput" placeholder="name">
            </div>
            <div class="mb-3">
                <label for="formGroupExampleInput2" class="form-label">description</label>
                <textarea name="description" type="text" class="form-control" id="formGroupExampleInput2" placeholder="description" rows="7"></textarea>
                <!-- <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="description"> -->
            </div>
                <!-- <button id="button-save" type="submit" onclick="saveItem()">save</button> -->
                <button id="button-save" type="submit" class="btn btn-primary" onclick="saveItem()">save</button>
            <div id="save-error" style="color: red; display: none;" data-error="<%= error || '' %>"></div>

        </form>
    </div>
</body>
<script src="/app.js"></script>
