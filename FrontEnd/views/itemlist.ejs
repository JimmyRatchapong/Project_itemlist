<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>itemlist</title>
</head>

<body>
    <div class="container">
        <button type="button" class="btn btn-danger" id="logout-button" onclick="logout()">Logout</button>
        <!-- <button class="logout-button" id="logout-button" type="button" onclick="logout()">Logout</button> -->
        <p></p>
        <button type="button" class="btn btn-primary" id="add-button" onclick="addItem()">Add</button>
        <!-- <button class="add-button" id="add-button" type="submit" onclick="addItem()">Add</button> -->

        <h1>itemList</h1>

        <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
                <% items.forEach(item=> { %>
                    <tr>
                        <td>
                            <%= item.id %>
                        </td>
                        <td>
                            <%= item.name %>
                        </td>
                        <td>
                            <%= item.description %>
                        </td>
                        <th>
                            
                            <!-- <button class="edit-button" id="edit-button" type="button" onclick="editItem('<%= item.id %>')">edit</button> -->
                            <button type="button" class="btn btn-secondary" onclick="editItem('<%= item.id %>')">edit</button>
                            <!-- <button class="delete-button" id="delete-button" type="button" onclick="deleteItem('<%= item.id %>')">delete</button> -->
                            <button type="button" class="btn btn-danger" onclick="deleteItem('<%= item.id %>')">delete</button>
                        </th>
                    </tr>
              <% }) %>
            </tbody>
          </table>
</div>

        
    

    <script src="/app.js"></script>   
    
</body>

</html>